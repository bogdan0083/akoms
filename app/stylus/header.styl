.header
	text-align center
	position relative
	padding-bottom 10px
	z-index 1
	background-color white
	&:before
		content ''
		position absolute
		height 12px
		width 100%
		left 0
		bottom -12px
		background linear-gradient(to bottom, rgba(black, 0.2) 0, transparent)
	.logo
		margin-top 10px
		display inline-block
		+above(880px)
			float left
			margin-right 80px
	.desc
		margin-top 4px
		line-height 1.5
		+above(880px)
			float left
			margin-top 22px
			text-align left
	.contact-block
		+above(880px)
			float right
		+above(1200px)
			margin-top 22px
			.phone, .btn
				vertical-align middle
				display inline-block
				margin 0
			.phone
				margin-right 10px
				margin-bottom 4px
.topline
	color white
	background-color $dark-blue
	height 35px
	padding-top 5px

.socials
	display none
	margin-top 1px
	a
		margin 0 5px
		display inline-block
		vertical-align middle
		transition all 0.3s
		opacity 0.6
		&:hover
			opacity 1
	+above(880px)
		display block
		float left
		
.login-block
	float right
	font-size 0.857rem
	font-weight 700
	text-transform uppercase
	margin-top 2px
	text-decoration none
	position relative
	&:hover
		color $orange
		.icon
			sprite($user_orange)
		> a:after
			border-color $orange transparent transparent transparent
	i
		margin-right 10px
	&.open .dropdown-menu
		display block
	&-in > a
		text-decoration none
		display inline-block
		padding-right 15px
		position relative
		font-size 0.857rem
		&:after
			content ''
			position absolute
			triangle(9px, 6px, 'bottom', white)
			right 0
			top 50%
			margin-top -4px
		&:hover span
			color orange
		&:hover i
			sprite($user_orange)
		&:hover:after
			border-color $orange transparent transparent transparent
	.login-nav
		position absolute
		top 28px
		border-radius 0 0 20px 20px
		box-shadow 2px 2px 5px 0 rgba(black, 0.3)
		background-color white
		width 100%
		padding 0 20px
		display none
		a
			display block
			color #2b2a29
			font-size 0.757rem
			text-transform uppercase
			text-decoration none
			text-align left
			padding 10px 0
			&:hover 
				color #004f8b

.topline-nav
	float left
	text-transform uppercase
	text-decoration none
	
.contact-block
	margin-top 10px
	.phone
		font-size 1.386rem
		font-weight 700
		display block
		margin-bottom 6px
		.icon 
			margin-right 10px
			
.topline-nav
	text-transform uppercase
	font-size 0.857rem
	margin-top 6px
	a, span
		display inline-block
		margin-right 40px
		text-decoration none
		font-weight 700
		transition all 0.3s
		&:hover
			color $orange
		+above(880px)
			margin-right 15px
		+above(1200px)
			margin-right 40px
	span
		color $orange