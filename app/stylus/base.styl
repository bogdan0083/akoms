html
  box-sizing border-box
  font-size 12px
  +above(880px)
    font-size 14px
    min-height 100%
    position relative
*, *:before, *:after 
  box-sizing inherit

body
  color black
  font-size 1rem
  font-family 'Lato', sans-serif
  font-weight 400
  background #f1f1f1 url(../images/tariff-bg.png)
  
a
  color inherit
  text-decoration underline
  &:hover
    text-decoration none
    
.icon
  display inline-block
  vertical-align middle
  position relative
  &:before, &:after
    content ''
    position absolute
    top 0 
    left 0
    width 100%
    height 100%
    display none
  + span
    display inline-block
    vertical-align middle
    
img
  max-width 100%
  
.vk
  sprite($vk)
  display inline-block
  
.fb
  sprite($fb)
  display inline-block
  
.inst
  sprite($inst)
  display inline-block
  
.vk-color
  sprite($vk_color)
  display inline-block
  
.fb-color
  sprite($fb_color)
  display inline-block
  
.inst-color
  sprite($inst_color)
  display inline-block
  
.i-user
  sprite($user)
.i-list
  sprite($list)
  &:before
    sprite($list_white)
.i-calendar
  sprite($calendar)
  &:before
    sprite($calendar_white)
.i-phone
  sprite($phone)
  
.page-wrapper
  transition all 0.3s
  overflow hidden
  &.active
    transform translateX(200px)
  
.nav-trigger
  display block
  hamburger-generator()
  text-align center
  margin-top 10px
  position relative
  z-index 10
  float left
  
  &.active
    hamburger-animation()
  +above(880px)
    display none
    

.btn
  border-radius 30px
  background-color $orange
  box-shadow inset 2px 2px 5px 0 #febf31, inset -2px 0px 5px 0 #febf31, inset 0 0 3px 4px $orange, inset 0 -4px 0 rgba(207, 106, 15, 0.75)
  color white
  width 170px
  margin 0 auto
  height 40px
  line-height 40px
  display block
  text-transform uppercase
  font-size 0.875rem
  font-weight 700
  text-decoration none
  transition all 0.3s
  text-align center
  border none
  .icon
    margin-right 8px
  .i-user
    sprite($user_black)
    &:before
      sprite($user)
  &:hover
    background-color #d46f13
  &-red
    background-color #e31e24
    box-shadow inset 0 3px 2px 2px #ff4953, inset 0 -3px 2px 1px darken(#d9171b, 20%)
    &:hover
      background-color #e31e24
      box-shadow inset 0 3px 2px 2px #c62226, inset 0 -3px 1px 1px #ff4953
  &-blue 
    background-color #0060aa
    box-shadow 0px 4px 0 0 #004185, inset 0 4px 3px 0 #0086ca
    line-height 44px

    &:hover
      background-color #004f8b
span.btn
  .icon:before
    display block
.mobile-nav
  background-color $dark-blue
  color white
  width 200px
  padding 20px
  position fixed
  left 0
  top 0
  min-height 100%
  transition transform 0.3s
  transform translateX(-100%)
  &.active
    transform translateX(0)
  +above(1200px)
    display none
  a, span
    font-weight 700
    text-transform uppercase
    text-decoration none
    display block
    margin 10px 0
    font-size 1.3rem
    &:first-child
      margin-top 0
  span
    color $orange
      
.field
  width 100%
  height 40px
  background-color #e8e8e8
  box-shadow inset 0 0 0.514rem 0.214rem #e8e8e8, inset 0 0.286rem 0 rgba(133, 133, 133, 0.75)
  border-radius 30px
  display block
  border none
  margin-bottom 20px
  border-bottom 3px solid white
  padding 0 20px
  &:focus
    outline none
  &::placeholder
    color black
  &-text
    height 120px
    padding-top 13px
    resize none
    

@keyframes wiggleBottom {
  0% {
    transform translateY(0)
  }
  
  50% {
    transform translateY(20px)
  }
  
  100% {
    transform translateY(0)
  }
  
}

@keyframes cursorMove {
  0% {
    transform translate(0)
  }
  
  50% {
    transform translate(-60px, -60px)
  }
  
  100% {
    transform translate(0)
  }
  
}

.animated {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}


@-webkit-keyframes fadeInDownBig {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, -2000px, 0);
    transform: translate3d(0, -2000px, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}

@keyframes fadeInDownBig {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, -2000px, 0);
    transform: translate3d(0, -2000px, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}

.fadeInDownBig {
  -webkit-animation-name: fadeInDownBig;
  animation-name: fadeInDownBig;
}


